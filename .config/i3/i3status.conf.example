general {
    colors = true
    interval = 5
}

order += "battery 0"
order += "wireless wlp4s0"
order += "tztime local"

wireless wlp4s0 {
    format_up = "WiFi: (%quality at %essid, %bitrate) %ip"
    format_down = "WiFi: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


tztime local {
    format = "%a, %b %e %l:%M %p"
}

